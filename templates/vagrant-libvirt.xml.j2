<network>
  <name>vagrant-libvirt</name>
  <forward mode='nat'>
    <nat>
      <port start='1024' end='65535'/>
    </nat>
  </forward>
  <bridge name='virbr1' stp='on' delay='0'/>
  <ip address='{{ libvirt_network.subnet }}' netmask='{{ libvirt_network.mask }}'>
    <dhcp>
      <range start='{{ libvirt_network.dhcp_start }}' end='{{ libvirt_network.dhcp_end }}'/>
    </dhcp>
  </ip>
</network>
